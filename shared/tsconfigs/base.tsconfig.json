{
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "types": [
      "node"
    ],
    "paths": {
      "@src": [
        "./src"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@test/*": [
        "./test/*"
      ],
      "@shared/*": [
        "../../shared/*"
      ]
    },
    "experimentalDecorators": true
  },
  "moduleResolution": "node"
}
