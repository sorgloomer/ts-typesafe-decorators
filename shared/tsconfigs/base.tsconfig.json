{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "paths": {
      "@lib": [
        "./lib"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@test/*": [
        "./test/*"
      ],
      "@shared/*": [
        "../../shared/*"
      ]
    },
    "experimentalDecorators": true
  },
  "moduleResolution": "node"
}
